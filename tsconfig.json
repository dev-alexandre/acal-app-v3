{
  "compileOnSave": false,
  "compilerOptions": {

    "baseUrl": "src",
    "paths": {
      "@env/*": ["environments/*"],
      "@app/*": ["app/*"],
      "@model/*": ["app/shared/model*"]
    },

    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "plugins": [
      { "name": "tslint-language-service"}
    ]
  }
}
